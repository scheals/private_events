<h1><%= @user.email %></h1>
<div>
  <p>Those are the events you've created:</p>
  <ul>
    <% @user.created_events.each do |e| %>
      <li>
        <p><%= e.name %></p>
        <p><%= e.location %></p>
        <p><%= e.date %></p>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <p>Those are the events you're attending:</p>
  <ul>
    <% @user.attended_events.each do |e| %>
      <li>
        <p><%= e.name %></p>
        <p><%= e.location %></p>
        <p><%= e.date %></p>
      </li>
    <% end %>
  </ul>
</div>


<div>
  <%= link_to 'Home', root_path %>
</div>
